         	<h3 class="text-muted text-center">Uneaten Burgers</h3>
        </div>
        <div class="panel-body">
          <ul>
								{{#each burgers}} {{#unless this.devoured}}
								<li>
									<h5>{{this.id}}. {{this.burger_name}}
										<form action='burgers/updateOne/{{this.id}}?_method=PUT' method='POST'>
											<input type='hidden' name='devoured' value='true'>
											<button type='submit' class="btn btn-lg btn-danger">EAT THIS!</button>
										</form>
									</h5>
								</li>
								{{/unless}} {{/each}}
							</ul>
        </div>
